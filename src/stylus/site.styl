*
  outline none

html, body
  height: 100%
  min-height: 100%
  position: relative
  width: 100%

html
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  overflow-x: hidden

body
  font-family: $page-font
  line-height: 1.8
  background #FF5409
  color white
  font-size 14px

header
  transition: .3s padding $transition
  width: 100%
  z-index: 1

main
  transition: .3s padding $transition
  will-change: padding-left

a
  color: inherit
  text-decoration: none

ol, ul, li
  list-style: none

img, video
  max-width: 100%

::-ms-clear
::-ms-reveal
  display: none

p
  margin 1rem 0
  &.-sm
    font-size $font-size-sm

  &.-xs
    font-size $font-size-xs

  &.-lg
    font-size $font-size-lg

  &.-compact
    line-height 1.4em

a
  cursor pointer
  color $brand

h1, h2, h3, h4, h5, h6, .headline
  color $font-color-4
  margin-top 0
  margin-bottom 1em
  line-height 1.2

h1
  font-size 2.8em
  line-height 1.05
  font-weight 300

h2
  font-size 2em
  line-height 1.2
  font-weight 500

h3
  font-size 1.6em
  line-height 1.419
  font-weight 500
  margin-bottom 1em

h4
  font-size 1.2em
  font-weight bold
  margin-bottom 1em

h5
  font-size 1em
  font-weight bold
  margin-bottom 1em

h6
  font-size 0.85em
  font-weight bold
  margin-bottom 1em

.info-text
  font-size 0.87em // 14px relative to root
  color $font-color-2
  line-height 1.33

.headline
  width 100%

  h1, h2, h3, h4
    margin-bottom 8px

  p
    margin-top 0
    color $font-color-2

:first-child
  margin-top 0

:last-child
  margin-bottom 0

ul.-roman
  margin-left 1.25em
  counter-reset: ordered;
  list-style-type: none;

  li
    position relative

    &:before
      position: absolute;
      top: auto;
      left: auto;
      user-select: none;
      pointer-events: none;
      margin-left: -1.25em;
      counter-increment: ordered;
      content: counters(ordered, ".") " ";
      text-align: right;
      color: rgba(0,0,0,.87);
      vertical-align: middle;
      opacity: .8;

ul.-bullet
  margin-left 1.25em

  li
    position relative

    &:before
      user-select: none;
      pointer-events: none;
      position: absolute;
      top: auto;
      left: auto;
      font-weight: 400;
      margin-left: -1.25em;
      content: 'â€¢';
      opacity: 1;
      color: inherit;
      vertical-align: top;

.vi-separator
  display flex
  align-items center
  &:before, &:after
    content: ''
    height 1px
    flex 1 1 0
    margin 0 1em
    background $border-color
  &.-right
    &:before
      display none
